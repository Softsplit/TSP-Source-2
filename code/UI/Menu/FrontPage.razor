@using Sandbox;
@using System.Threading.Tasks;
@using Sandbox.UI;

@attribute [StyleSheet]

<root>
    <div class="discord">
        <div class="text1">
            <img class="icon"
                src="https://github-production-user-asset-6210df.s3.amazonaws.com/86578963/255563914-776e09e2-2cff-4d52-ae1a-926f93e691d8.png">
            <a>Discord</a>
        </div>
        <div class="text2">
            <a>https://discord.gg/GaGFHFttAC</a>
        </div>
    </div>
    <div class="wrapper">
        <div class="controls">
            @if (Game.InGame)
            {
                <div class=game-title>
                    <div class="game-title2">
                        The game is now paused
                    </div>
                </div>
                <a class="button" @onclick=@HideMenu>Resume the game</a>
                <a class="button" @onclick=@BeginTheGame>Begin the game again</a>
                <a class="button" href="/options">Options</a>
                <a class="button" onclick=@LeaveGame>Quit to menu</a>
            }
            else
            {
                <div class=game-title>
                    <div class="game-title1">
                        You are playing
                    </div>
                    <div class="game-title2">
                        THE STANLEY PARABLE: 
                    </div>
                    <div class="game-title3">
                        SOURCE 2
                    </div>
                </div>
                <a class="button" @onclick=@BeginTheGame>Begin the game</a>
                <a class="button" href="/options">Options</a>
                <a class="button" href="/credits">Credits</a>
                <a class="button" @onclick=@Close>Quit</a>
            }
        </div>
    </div>
</root>

@code
{
    public override void Tick()
    {
        base.Tick();
        UpdateAmbience();
    }

    SoundHandle MenuAmbience;

    void UpdateAmbience()
    {
        if (Game.InGame || Game.Menu.IsLoading)
        {
            MenuAmbience.Stop(true);
            return;
        }
        if (!MenuAmbience.IsPlaying)
        {
            MenuAmbience = Audio.Play("office_soundscape");
        }
    }

    private void LeaveGame()
    {
        Game.Menu.LeaveServer("Leaving");
    }

    private void HideMenu()
    {
        Game.Menu.HideMenu();
    }

    private void Close()
    {
        Game.Menu.Close();
    }

    async Task BeginTheGame()
    {
        await Game.Menu.StartServerAsync(1, "The Stanley Parable", "softsplit.tsp_seriousroom");
    }
}
