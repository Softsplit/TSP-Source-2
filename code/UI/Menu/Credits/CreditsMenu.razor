@using System.Linq;
@using Sandbox;
@using Sandbox.UI;
@using Sandbox.MenuSystem;
@using Sandbox.UI.GameMenu

@page "/credits"
@namespace TSPS2.Menu
@attribute [StyleSheet]
@inherits Panel

<root>
    <div class="container">
        <div class="subcreditstype1">#GameCredits.SubCreditsType1</div>
        <div class="creditstype1">SOFTSPLIT STUDIOS</div>
        <div class="subcreditstype2">#GameCredits.SubCreditsType2</div>
        <div class="creditstype2">DAVEY WREDEN</div>
        <div class="subcreditstype3">#GameCredits.SubCreditsType3</div>
        <div class="creditstype3">KEVAN BRIGHTING</div>

        <div class="subcontainer">
            <button class="button" @onclick=@OnClickViewFullCredits>#GameCredits.ViewFullCredits</button>

            <div class="socials">
                <div class="discord">
                    <div class="icon-discord"></div>
                    discord.gg/GaGFHFttAC
                </div>
                <div class="twitter">
                    <div class="icon-twitter"></div>
                    @@TSPSource2
                </div>
                <div class="website">
                    <div class="icon-website"></div>
                    tspsource2.com
                </div>
            </div>
        </div>
    </div>
    <div class="back" @onclick=@OnClickBack>#Generic.Back</div>
</root>

@code {
    public CreditsMenu()
    {
        BindClass("ingame", () => Game.InGame);
    }

    public void OnClickBack()
    {
        this.Navigate("/");
    }

    public void OnClickViewFullCredits()
    {
        this.Navigate("/");
    }
}